
 <%= form_with(model: @rental_building, local: true) do |f| %> 
  <%= f.label '物件名' %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label '賃料' %>
  <br>
  <%= f.text_field :price %>円
  <br>
  <%= f.label '住所' %>
  <br>
  <%= f.text_field :address %>
  <br>
  <%= f.label '築年数' %>
  <br>
  <%= f.text_field :age %>年
  <br>
  <%= f.label '備考' %>
  <br>
  <%= f.text_area :comment %>
  <br>
  <p>___________________________________________________________________________________________________________________________________________</p>
   
    <%= f.fields_for :closest_stations do |station| %>
      <h2>最寄り駅</h2>
          <%= station.label '路線名' %>
          <br>
          <%= station.text_field :line %>
          <br>
          <%= station.label '駅名' %>
          <br>
          <%= station.text_field :station_name %>
          <br>
          <%= station.label '徒歩分数' %>
          <br>
          <%= station.text_field :walk_by %>分
                 
    <% end %>

    <br>
    <%= f.submit "登録する" %>
    <br>
  
<br>

<% end %>
  
